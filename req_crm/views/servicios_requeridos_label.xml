<?xml version="1.0" encoding="utf-8"?>

<odoo>
  <data>
    <record id="crm_lead_servicios_requeridos_label" model="ir.ui.view">
      <field name="name">crm.lead.servicios.requeridos.label</field>
      <field name="model">crm.lead</field>
      <field name="inherit_id" ref="crm.quick_create_opportunity_form"/>
      <field name="arch" type="xml">            
          <xpath expr="//group/field[@name='name']" position="attributes">
            <attribute name="string">Servicios Requeridos</attribute>
          </xpath>
          <xpath expr="//label[@for='expected_revenue']" position="attributes">
            <attribute name="invisible">1</attribute>
          </xpath>
          <xpath expr="//group/div[1]" position="attributes">
            <attribute name="invisible">1</attribute>
          </xpath>          
      </field>          
    </record>
  </data>
</odoo>