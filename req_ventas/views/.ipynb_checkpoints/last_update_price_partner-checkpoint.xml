<?xml version="1.0" encoding="utf-8"?>

<odoo>
  <data>
    <record id="last_update_price_partner_form" model="ir.ui.view">
      <field name="name">last.update.price.partner.form</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
          <xpath expr="//group/field[@name='tax_id']" position="after">
            <field name="last_update_pricelist_date"/>
            <field name="last_update_pricelist_partner"/>            
          </xpath>
          <xpath expr="//tree/field[@name='tax_id']" position="after">
            <field name="last_update_pricelist_date"/>
            <field name="last_update_pricelist_partner"/>            
          </xpath>                   
      </field>          
    </record>
  </data>
</odoo>